<!DOCTYPE html>
<html class = "teal">
 <%= render 'navbar', controller: :pages%>
<head>
</head>
<body>
<div class="col s12 m5">
   <div class="card blue-grey darken-1" style="overflow; height:227px;">
      <div class="card-content white-text">
         <div id = "data">
           
            
            <table id = "connected_users">
        <thead>
          <tr>
              <th>Name</th>
              <th>Score</th>
          </tr>
          <tbody>
            <% @connected.order('score DESC').each do |conn| %>
          <tr>
            <td><%=conn.username%></td>
            <td><%=conn.score%></td>
          </tr>
          <% end %>
       </tbody>
    </thead>
  </table>
   </div>
   <h1 id="winner"></h1>
      </div>
   </div>
   
</div>

</body>

<script>
  document.getElementById("winner").innerHTML = "The Winner is: " + document.getElementById("connected_users").rows[1].cells[0].innerHTML + "!"
  
</script>
</body>