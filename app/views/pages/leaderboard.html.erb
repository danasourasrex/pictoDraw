<!DOCTYPE html>
<head>
<%= stylesheet_link_tag    "materialize.css", :type => "text/css", :media => "screen,projection" %>
</head>
<html >


<body class = "teal lighten-4">
<%= render 'pages/navbar', controller: :pages%>


<div class="row">
      <div class="col s12">
        <div class="card teal darken-3">
          <div class="card-content white-text">
            <span class="card-title center">LeaderBoard</span>
			<table id = "users" class="striped">
  			<thead>
    		<tr>
      			<th>Name</th>
      			<th>Games Won</th>
      			<th>Games Played</th>
      			<th colspan="3"></th>
    		</tr>
  			</thead>

  			<tbody>
    		<% @users.each do |user| %>
      		<tr>
        		<td><%= user.email %></td>
        		<td><%= user.gameswon %></td>
        		<td><%= user.gamesplayed%></td>
      		</tr>
    		<% end %>
 		 	</tbody>
			</table>
          </div>
       </div>
      </div>
      </div>
</body>
</html>